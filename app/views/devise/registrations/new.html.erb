<div class="row devise">
  <div class="col-sm-6 info">
    <div class="row">
      <div class="col-sm-8 col-sm-push-2">
        <h3><%=t 'user.form.create_your'%> <strong class="green"> <%=t 'user.form.account'%>!</strong></h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label I18n.t('user.form.name') %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: I18n.t('user.placeholders.name') %>
          </div>
          <div class="form-group">
            <%= f.label I18n.t('user.form.email') %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "yourname@example.com" %>
          </div>
          <div class="form-group">
            <%= f.label I18n.t('user.form.password') %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" , placeholder: I18n.t('user.placeholders.password')%>
          </div>
          <div class="form-group">
            <%= f.label I18n.t('user.form.password_confirmation') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: I18n.t('user.placeholders.password') %>
          </div>

          <div class="actions">
            <%= f.submit I18n.t('user.new.submit'), class: "btn btn-green form-control" %>
          </div> 
        <% end %>
        <p class="devise-link">
          <%= t 'user.form.have_account'%> <%= link_to "<strong>#{I18n.t('user.new.login')}</strong>".html_safe, new_session_path(resource_name) %><br />
        </p> 
      </div>
    </div>
  </div>
  <div class="col-sm-6 devise-img devise-signup-1 hidden-xs"></div>
</div>


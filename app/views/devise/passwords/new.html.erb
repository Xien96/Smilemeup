<div class="row devise">
  <div class="col-sm-6 info">
    <div class="row">
      <div class="col-sm-8 col-sm-push-2">
        <h3><%= t 'password.new.title1'%> <strong class="green"><%= t 'password.new.title2'%>?</strong></h3>
        <p>
          <%= t 'password.new.desc1' %> <br>
          <%= t 'password.new.desc2' %>
        </p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group">
            <%= f.label I18n.t('user.form.email') %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "yourname@example.com" %>
          </div>
          
          <div class="actions">
            <%= f.submit "#{I18n.t('password.new.submit')}", class: "btn btn-green form-control" %>
          </div> 
        <% end %>
        <!-- <%= render "devise/shared/links" %>         -->
      </div>
    </div>
  </div>
  <div class="col-sm-6 devise-img devise-forgot"></div>
</div>

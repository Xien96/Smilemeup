<div class="row devise">
  <div class="col-sm-6 info">
    <div class="row">
      <div class="col-sm-8 col-sm-push-2">
        <h3>Forgot <strong class="green">Your Password?</strong></h3>
        <p>
          Love having you back, <br>
          log on your account and see what's new!
        </p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "yourname@example.com" %>
          </div>
          
          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "btn btn-green form-control" %>
          </div> 
        <% end %>
        <!-- <%= render "devise/shared/links" %>         -->
      </div>
    </div>
  </div>
  <div class="col-sm-6 devise-img devise-forgot"></div>
</div>

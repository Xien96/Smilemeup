<div class="row devise">
  <div class="col-sm-6 info">
    <div class="row">
      <div class="col-sm-8 col-sm-push-2">
        <h3><strong class="green"><%= t 'user.form.welcome_back' %>!</strong></h3>
        <p>
          <%= t 'user.form.welcome_desc1' %> <br>
          <%= t 'user.form.welcome_desc2' %>
        </p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label I18n.t('user.form.email') %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "yourname@example.com" %>
          </div>
          <div class="form-group">
            <%= f.label  I18n.t('user.form.password')  %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to I18n.t('user.form.forget_password'), new_password_path(resource_name), class: 'pull-right small-link' %><br />
            <% end -%>
          </div>

          <div class="actions">
            <%= f.submit "SIGN IN", class: "btn btn-green form-control" %>
          </div> 
        <% end %>
        <p class="devise-link">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= t 'user.form.donot_have_account' %> <%= link_to "<strong>#{I18n.t('user.new.signup')}</strong>".html_safe, new_registration_path(resource_name) %><br />
          <% end -%>
        </p> 
      </div>
    </div>
  </div>
  <div class="col-sm-6 devise-img devise-login hidden-xs"></div>
</div>

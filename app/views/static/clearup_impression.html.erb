          <%= image_tag('impression.svg', class: "impression-kit") %>
        </div>
        <div class="text-center">
          <h3><%= t 'products.impression.title'%> </h3>
          <h5>(<%= t 'products.impression.title_desc'%>)</h5><br>
          <button type="button" class="btn btn-lg btn-green btn-hover" data-toggle="modal" data-target="#hollywoodModal"><%= t 'products.add_to_card '%></button>
        </div>                  
        </div>
      </div>      

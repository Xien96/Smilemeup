<!--start our Orders -->
<div class="our-time-line">
  <div class="container">
    <div class="horizintal-order">
      <div class="text-center horizintal-order-container">
        <div class="row">
          <div class="col-sm-4">
            <h3>Profile <span></span> </h3>
          </div>
           <div class="col-sm-4">
            <h3>My Orders<span></span></h3>
          </div>
           <div class="col-sm-4">
            <h3>Messages<span></span></h3>
          </div>
        </div>
      </div>
    </div>
      <table class="table">
                <thead>
                  <tr>
                    <th>&nbsp;</th>
                    <th>product</th>
                    <th>style</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |ci| %>
                  <tr class="cart-item">
                    <td class="img"><%= image_tag("products/#{Style.find(ci.style_id).name}.png")%></td>
                    <td><%= Product.find(ci.product_id).name %></td>
                    <td>
                      <strong>The <%= Style.find(ci.style_id).name.titleize %> Smile</strong><br>
                      <%= Style.find(ci.style_id).tagline %>
                    </td>
                    <td><%= ci.quantity %></td>
                    <td><%= number_to_currency(ci.subtotal) %> </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
    <div class="time-line-shadow">
      <h1 class=""></h1>
      <div class="row">
          <div class="col-sm-12">
          <div class="col-lg-6 col-sm-12 media-order">
              <div class="col-lg-2 col-sm-12">
                <div class="order-number">
                  <h2>#1</h2>
                </div>
              </div>
              <div class="col-lg-4 col-sm-12">
                <div class="our-order-image">

                  <%= image_tag('Hollywood.png', class: "Hollywood-oder") %>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
              <div class="order-content">
                <h2>Hollywood Smile</h2>
                <p>(The typical Hollywood smile)</p>
                <p>Order placed on: 31 jun 2018</p>
                <p>Order ID: #4042505326209</p>
                <p>Payment method: Credit card</p>
              </div>
            </div>
          </div>

          <div class="col-lg-5 col-sm-12">
            <div class="col-sm-12">
             <nav class="timeline-order">
              <ol>
                <ul>
                  <li>1</li>
                  <li>2</li>
                  <li>3</li>
                </ul>
              </ol>
            </nav>
          </div>

          <div class="col-sm-12 cal-total">
            <div class="our-calc">
              <p>subtotal: <span>900 USD</span></p>
              <hr>
              <p>subtotal: <span>900 USD</span></p>
            </div>
          </div>
          </div>
          <div class="col-lg-1 hidden-md hidden-sm hidden-xs image-hidden-pus">
            <div class="image-pus">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!--End our Orders -->